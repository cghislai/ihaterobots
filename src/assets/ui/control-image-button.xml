<nifty-controls>
   <controlDefinition style="nifty-button" name="imageButton" controller="ihaterobots.ui.controls.ImageButtonController" inputMapping="de.lessvoid.nifty.input.mapping.MenuInputMapping">
      <panel style="#panel" focusable="true">
         <image id="#image" style="#image" filename="$imageFilename">
            <text id="#text" style="#text" text="$label"/>
         </image>
      </panel>
   </controlDefinition>
</nifty-controls>
